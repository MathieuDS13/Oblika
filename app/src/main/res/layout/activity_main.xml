<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="370dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/oblika"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonGameActivity"
        android:layout_width="255dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:text="Sélection des niveaux"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/buttonGameActivity2"
        android:layout_width="255dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:text="Préférences"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonGameActivity" />

    <Button
        android:id="@+id/buttonGameActivity3"
        android:layout_width="255dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:text="Leaderboard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonGameActivity2" />


</android.support.constraint.ConstraintLayout>